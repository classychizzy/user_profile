generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model address {
  addressId     Int         @id @default(autoincrement())
  state         String      @db.VarChar(255)
  city          String      @db.VarChar(255)
  street        String      @db.VarChar(255)
  userprofileId Int
  userprofile   userprofile @relation(fields: [userprofileId], references: [userprofile_Id])

  @@index([userprofileId], map: "address_userprofileId_fkey")
}

model user {
  first_name   String        @db.VarChar(255)
  last_name    String        @db.VarChar(255)
  email        String        @unique(map: "email") @db.VarChar(255)
  created_at   DateTime      @default(now())
  updated_at   DateTime      @updatedAt
  password     String        @db.VarChar(50)
  userId       String        @id @default(uuid())
  RefreshToken RefreshToken?
  userprofile  userprofile[]
}

model userprofile {
  username       String    @db.VarChar(255)
  email          String    @db.VarChar(255)
  phone_number   String    @db.VarChar(25)
  userprofile_Id Int       @id @default(autoincrement())
  id             String
  address        address[]
  user           user      @relation(fields: [id], references: [userId])

  @@index([id], map: "userprofile_id_fkey")
}

model RefreshToken {
  id          String   @id
  hashedToken String
  createdAt   DateTime @default(now())
  user_Id     String
  user        user     @relation(fields: [id], references: [userId], onDelete: Cascade)
}
